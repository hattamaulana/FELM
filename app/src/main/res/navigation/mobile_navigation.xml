<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/moviesFragment">
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.github.hattamaulana.moviecatalogue.ui.catalogue.CatalogueViewFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
        <action
            android:id="@+id/action_moviesFragment_to_settingActivity"
            app:destination="@id/settingActivity" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.github.hattamaulana.moviecatalogue.ui.detail.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <argument
            android:name="movie"
            app:argType="io.github.hattamaulana.moviecatalogue.MovieModel" />
    </fragment>
    <activity
        android:id="@+id/settingActivity"
        android:name="com.github.hattamaulana.moviecatalogue.ui.setting.SettingActivity"
        android:label="activity_setting"
        tools:layout="@layout/activity_setting" />
</navigation>