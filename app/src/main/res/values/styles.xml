<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <!-- Detail Activity Theme-->
    <style name="AppTheme.DetailActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:background">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DetailActivityStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <!-- Style Bottom Navigation View -->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Text -->
    <style name="TextTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextTitle.List" parent="TextTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorTextMedium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContentPreview" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorTextMedium</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- ! Text -->
</resources>
