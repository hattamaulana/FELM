<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_notification">

        <SwitchPreferenceCompat
            app:key="notificationEarlyMorning"
            app:summaryOff="@string/summary_off_early_morning"
            app:summaryOn="@string/summary_on_early_morning"
            app:title="@string/title_early_morning" />

        <SwitchPreferenceCompat
            app:key="notificationNewRelease"
            app:summaryOff="@string/summary_off_new_release"
            app:summaryOn="@string/summary_on_new_release"
            app:title="@string/title_new_release" />

    </PreferenceCategory>

</PreferenceScreen>